{
  "name": "j-and-j",
  "version": "1.0.0",
  "description": "j & j",
  "private": true,
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "export NODE_ENV=development && nest start --watch",
    "start:debug": "npm run start:dev -- --debug",
    "start:prod": "NODE_ENV=production node build/main.js",
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=production npm nest build -p tsconfig.build.json",
    "test": "npm run lint && npm run test:coverage",
    "test:watch": "npm run test:nocoverage -- --watch",
    "test:coverage": "npm run test:nocoverage -- --coverage",
    "test:nocoverage": "NODE_ENV=test jest",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:fix": "npm run lint:prettier -- --write && npm run lint:eslint -- --fix ",
    "lint:eslint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier . --check",
    "clean": "rimraf build coverage"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "clearMocks": true,
    "automock": true,
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nestjs/common": "7.0.7",
    "@nestjs/core": "7.0.7",
    "@nestjs/graphql": "7.2.1",
    "@nestjs/platform-express": "7.0.7",
    "@types/jest": "^25.2.1",
    "ajv": "^6.12.0",
    "apollo-server": "2.12.0",
    "apollo-server-express": "2.12.0",
    "chalk": "^4.0.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.14.0",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "graphql": "15.0.0",
    "graphql-subscriptions": "1.1.0",
    "knex": "^0.20.13",
    "objection": "^2.1.3",
    "pg": "^8.0.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.2",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.7",
    "@types/express": "4.17.6",
    "@types/node": "13.11.1",
    "@types/supertest": "2.0.8",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "25.3.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.2",
    "tsconfig-paths": "3.9.0",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "typescript": "3.8.3"
  }
}
